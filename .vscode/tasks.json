{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run blog dev server",
        "type": "shell",
        "command": "invoke livereload 2>&1 | tee /dev/tty | grep --line-buffered ERR |  xargs -d '\n' -I % notify-send -u critical -t 3600 '%'",
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "dependsOn": ["checkout write git branch"]
      },
      {
        "label": "checkout write git branch",
        "type": "shell",
        "command": "git checkout write",
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      }
    ]
}